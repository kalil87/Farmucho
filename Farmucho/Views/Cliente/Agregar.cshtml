@model Cliente
@Html.Raw(TempData["msg"])

<link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

<h1>Agregar Cliente</h1>
<hr />

<form asp-action="GuardarAgregar">
    <div class="form-group mb-3">
        <label class="control-label">NOMBRE</label>
        <input asp-for="Nombre" class="form-control" type="text" />
    </div>
    <div class="form-group mb-3">
        <label class="control-label">APELLIDO</label>
        <input asp-for="Apellido" class="form-control" type="text" />
    </div>
    <div class="form-group mb-3">
        <label class="control-label">TELEFONO</label>
        <input asp-for="Telefono" class="form-control type="tel" />
    </div>
    <div class="form-group mb-3">
        <label class="control-label">MAIL</label>
        <input asp-for="Mail" class="form-control" type="email" />
    </div>
    <div class="form-group mb-3">
        <label class="control-label">CUIT</label>
        <input asp-for="Cuit" class="form-control" type="number" />
    </div>
    <div class="form-group mb-3" style="margin-top:10px">

        <input type="submit" value="Enviar" class="btn btn-success" />

    </div>
</form>

<a asp-action="Index" asp-controller="Cliente" class="btn btn-outline-dark fa fa-arrow-left" style="margin-top:10px; margin-bottom:10px" aria-hidden="true"></a>